<div class="container-detail">
  <img src="{{image}}" alt="">
  <div class="container-info">
    <a href="/movies">Go back</a>
    <h2>{{title}}</h3>
      <p> <strong> Director: </strong>{{director}}</p>
      <h3>Stars
    </h2>
    <ul>
      {{#each stars as |star|}}
      <li>{{star}}</li>
      {{/each}}
    </ul>
    <p>{{description}}</p>
    {{#each showtimes as |time|}}
    <span>{{time}} |</span>
    {{/each}}
  </div>
</div>